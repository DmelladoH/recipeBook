---
import Back from "../icons/back.astro";
---

<header id="header" class="transition-blur  md:backdrop-blur-none md:bg-transparent p-6 fixed z-50 w-screen text-x2 md:flex">
    <a href="/" class="flex gap-2 hover:text-gray-700">
        <Back />
        <p class="hidden lg:flex mb-[3px]">Volver al menu</p>
    </a>
</header>
<slot />

<script>
    // JavaScript to handle scrolling
    window.addEventListener('scroll', () => {
        const header = document.getElementById('header');
        if (header == null) return

        if (window.scrollY > 250) {
            header.classList.add('backdrop-blur-md');
        } else {
            header.classList.remove('backdrop-blur-md');
        }
    });
</script>