---
interface Props {
    title: string,
    description: string,
    cookingTime: number,
    ingredients: string[],
    instructions: string[],
    picture: string,
}

const {title, description, cookingTime, ingredients, instructions, picture} = Astro.props
---

<div class=" md:w-[640px] md:mt-10 mb-20">
    <header>
        <div class="flex justify-center">
            <img src={picture} alt={title} width="100%" height="300px" class="md:rounded-lg"/>
        </div>
        <div class="grid gap-4 p-6">
            <h2 class="text-center text-5xl text-[#3b1a18]">{title}</h2>
            <p>{description}</p>
        </div>
        <div class="flex px-6">
            <div class="flex gap-1 items-end">
                <img src="/clock.svg" height="20" width="20" alt="tiempo de preparaciÃ³n"/>
                <span>{cookingTime} min</span>
            </div>
        </div>
    </header>
    <section class="p-5 mt-8 bg-[#eee29d] drop-shadow-[0_8px_8px_rgba(0,0,0,0.09)] rounded-lg  h-min m-4">
        <h3 class="text-xl topacity-85 bold uppercase">ingredientes</h3>
        <ul class="list-disc pl-8 grid gap-2 m-3">
            {
                ingredients.map(ingredient => (
                    <li>{ingredient}</li>
                ))
            }
        </ul>
    </section> 
    
    <section class="p-5  h-min">
        <h3 class="text-xl topacity-85 bold uppercase">Pasos:</h3>
        <ol class="list-decimal pl-8 grid gap-3 mt-3">
        {
            instructions.map(step => (
                <li>{step}</li>
            ))
        }
        </ol>
    </section>          
</div>
