---
import Image from 'astro/components/Image.astro';
import type { IngredientGroup, stepsGroup } from '../type'
import Clock from '../icons/clock.astro';

interface Props {
    id: string
    title: string,
    description?: string,
    cookingTime: number,
    ingredients: IngredientGroup[],
    steps: stepsGroup[],
    picture: string,
    videoId?: string,
} 

const {title, description,ingredients, steps, cookingTime, picture, videoId} = Astro.props

---

<div class=" md:w-[640px] md:mt-10 mb-20">
    <header>
        <div class="flex justify-center">
            <img src={picture} alt={title} width="100%" height={300} class="md:rounded-lg" transition:name="dish-photo" />
        </div>
        <div class="grid gap-4 p-6">
            <h2 class="text-center text-balance text-5xl text-[#3b1a18]">{title}</h2>
            <p>{description}</p>
        </div>
        <div class="flex px-6">
            <div class="flex gap-1 items-end">
                <Clock />
                <span>{cookingTime} min</span>
            </div>
        </div>
    </header>
    <section class="p-5 mt-8 bg-[#eee29d] drop-shadow-[0_8px_8px_rgba(0,0,0,0.09)] rounded-lg  h-min m-4">
        <h3 class="text-xl topacity-85 bold uppercase">ingredientes</h3>
        {
            ingredients.map((elem) => (
                <div class="py-3">
                    {elem.title && <h5 class="text-lg font-medium">{elem.title}</h5>}
                    <ul class="list-disc pl-8 grid gap-2 m-3">
                        {
                            elem.ingredients.map(ingredient => (
                                <li>{ingredient}</li>
                            ))
                        }
                    </ul>
                </div>
            ))
        }
    </section> 
    
    <section class="p-5  h-min">
        <h3 class="text-xl topacity-85 bold uppercase">Pasos:</h3>
        <slot name="steps" />
        {
            steps.map((elem) => (
                <div class="py-3">
                    {elem.title && <h5 class="text-lg font-medium">{elem.title}</h5>}
                    <ol class="list-decimal pl-8 grid gap-3 mt-3">
                        {
                            elem.steps.map(step => (
                                <li>{step}</li>
                            ))
                        }
                    </ul>
                </div>
            ))
        }
    </section> 
    <section class="mt-10">
        <lite-youtube videoid={videoId} vudeoTitle={title} class="shadow-2xl shadow-white/10"></lite-youtube>    
    </section>
</>

<script>
    import '@justinribeiro/lite-youtube';
</script>