---
import Card from '../components/Card.astro';
import Layout from './Layout.astro';
import "../../global.css"
import { recipes } from '../lib/recipes';
---

<Layout title="Mis Recetas">
	<main>
		<header class="mt-5 md:mt-10">
			<h1 class="text-4xl font-bold text-center">
				Recipe Book
			</h1>  
		</header>
		<section class="mt-10 md:mx-10 gallery p-5" >
			{
				recipes.map((recipe) => (
					<Card 
						key={recipe.id} 
						img={recipe.picture} 
						name={recipe.title} 
						href={`recipes/${recipe.id}`}
						cookingTime="30"
					/>
				))
			}
		</section>
	</main>
</Layout>
